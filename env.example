# Discord Bot Framework Environment Variables
# Copy this file to .env and fill in your bot tokens

# =============================================================================
# Global Settings (applies to all bots unless overridden)
# =============================================================================
COMMAND_PREFIX=!
LOG_LEVEL=info
JSON_LOGGING=false
DEBUG=false

# Guild ID removed - using global commands only

# Timeout configurations
SHUTDOWN_TIMEOUT=30s
REQUEST_TIMEOUT=30s
MAX_RETRIES=3

# =============================================================================
# MTG Card Bot Configuration
# =============================================================================
MTG_DISCORD_TOKEN=your_mtg_bot_token_here
CACHE_TTL=1h
CACHE_SIZE=1000

# =============================================================================
# Clippy Bot Configuration
# =============================================================================
CLIPPY_DISCORD_TOKEN=your_clippy_bot_token_here
RANDOM_RESPONSES=true
RANDOM_INTERVAL=45m
RANDOM_MESSAGE_DELAY=3s

# =============================================================================
# Music Bot Configuration
# =============================================================================
MUSIC_DISCORD_TOKEN=your_music_bot_token_here
MUSIC_DATABASE_URL=music.db
MAX_QUEUE_SIZE=100
INACTIVITY_TIMEOUT=5m
VOLUME_LEVEL=0.5